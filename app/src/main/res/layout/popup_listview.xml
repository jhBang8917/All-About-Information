<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_vertical|center_horizontal">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="브랜드 선택"
            android:id="@+id/popup_listview_title" android:layout_gravity="center_horizontal" android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" android:textSize="18dp"
            android:textColor="#90000000" android:textStyle="bold" android:layout_marginTop="10dp"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/popup_listview" android:layout_weight="9"
            android:layout_margin="10dp"/>
</LinearLayout>