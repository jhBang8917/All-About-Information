<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
        >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:id="@+id/grouplistview"
            android:layout_marginTop="10dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="4.5"
                android:layout_gravity="center" android:id="@+id/relativeLayout">
                <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/status_textview" android:layout_marginTop="4dp" android:layout_marginLeft="4dp"
                        android:singleLine="true" android:ellipsize="marquee" android:textColor="@android:color/white"
                        android:textSize="10dp" android:gravity="center_vertical"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_column="1" android:layout_rowSpan="6"
                    android:layout_gravity="center"
                    android:id="@+id/grouplisttitle_linearlayout" android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/title1_textview" android:singleLine="true" android:textSize="11dp"
                        android:textColor="#70000000" android:textStyle="bold"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Large Text"
                        android:id="@+id/content1_textview" android:layout_column="1"
                        android:layout_rowSpan="6" android:ellipsize="marquee" android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:textSize="21dp"
                        android:textColor="#ff000000" android:textStyle="bold"
                        android:gravity="center_horizontal" android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/indicatior_imageview"
                    android:background="@drawable/common_indicator_plus"
                    android:layout_marginLeft="10dp" android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true" android:layout_marginBottom="10dp"/>
        </RelativeLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_column="3" android:layout_rowSpan="6"
                android:layout_weight="6" android:layout_gravity="center" android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/space1" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="내용1"
                    android:id="@+id/title2_textview" android:layout_column="3" android:layout_row="1"
                    android:ellipsize="marquee"  android:singleLine="true"
                    android:layout_weight="1" android:textSize="11dp" android:textColor="#70000000"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Medium Text"
                    android:id="@+id/content2_textview" android:layout_column="3" android:layout_row="2"
                    android:ellipsize="marquee" android:marqueeRepeatLimit="marquee_forever" android:singleLine="true"
                    android:layout_weight="1" android:layout_marginLeft="10dp" android:textSize="16dp"
                    android:textColor="#ff000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/space2" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="내용2"
                    android:id="@+id/title3_textview" android:layout_column="3" android:layout_row="3"
                    android:ellipsize="marquee" android:singleLine="true"
                    android:layout_weight="1" android:textSize="11dp" android:textColor="#70000000"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Medium Text"
                    android:id="@+id/content3_textview" android:layout_row="4" android:layout_column="3"
                    android:ellipsize="marquee" android:marqueeRepeatLimit="marquee_forever" android:singleLine="true"
                    android:layout_weight="1" android:layout_marginLeft="10dp" android:textSize="16dp"
                    android:textColor="#ff000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/space3" android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>