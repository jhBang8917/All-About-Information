<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.june.brandpic.app">

    <!-- 인터넷 권한 추가 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION">
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_512x512"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BrandResultActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".BrandSearchActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".HarmUpdateActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".AgencySearchActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".AgencyResultActivity" android:windowSoftInputMode="adjustPan"/>
    </application>

    </manifest>
